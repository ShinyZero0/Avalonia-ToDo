<Application x:Class="ToDo.App" xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="using:ToDo"
             xmlns:v="clr-namespace:ToDo.Views"
             >
  <Application.DataTemplates>
    <local:ViewLocator />
  </Application.DataTemplates>

  <Application.RequestedThemeVariant>Light</Application.RequestedThemeVariant>
  <Application.Styles>
    <FluentTheme />
  </Application.Styles>
  <Application.Resources>
    <v:IsNotNullOrWhiteSpace x:Key="IsNotNullOrWhiteSpace" />
  </Application.Resources>
</Application>
