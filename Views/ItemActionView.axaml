<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:ToDo.ViewModels"
        Width="400" Height="300"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ToDo.Views.ItemActionView">

<Grid ColumnDefinitions="*" RowDefinitions="auto, *, auto">
  <TextBox x:Name="NameBox" Grid.Row="0" AcceptsReturn="True" TextWrapping="Wrap" Text="{Binding Name}"/>
  <ScrollViewer Grid.Row="1">
    <TextBox x:Name="ContentBox" FontFamily="/Assets/Fonts/FiraMono-Regular.ttf#Fira Mono" AcceptsReturn="True" TextWrapping="Wrap" Text="{Binding Content}"/>
  </ScrollViewer>
  <StackPanel Grid.Row="2" Orientation="Horizontal">
    <Button IsEnabled="{Binding #NameBox.Text, Converter={StaticResource IsNotNullOrWhiteSpace}}" Content="Принять" Command="{Binding AcceptItemCommand}"/>
    <Button Content="Отмена" Command="{Binding CancelCommand}"/>
  </StackPanel>
</Grid>

</Window>
