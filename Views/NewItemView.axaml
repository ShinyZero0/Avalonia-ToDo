<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:actualToDo.ViewModels"
    x:DataType="vm:NewItemViewModel"
    x:CompileBindings="True"
    Width="400" Height="300"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="actualToDo.Views.NewItemView"
    Title="Добавить задачу">

<StackPanel>
    <TextBox AcceptsReturn="True" TextWrapping="Wrap" Text="{Binding Name}"/>
    <Button Content="Добавить" Command="{Binding AcceptNewItemCommand}"/>
    <Button Content="Отмена" Command="{Binding CancelCommand}"/>
</StackPanel>

</Window>
